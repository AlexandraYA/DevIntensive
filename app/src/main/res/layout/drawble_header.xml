<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="172dp"
    android:layout_marginTop="@dimen/spacing_medial_24"
    android:background="@color/gray_light">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:layout_marginLeft="@dimen/spacing_small_8"
        android:background="@color/color_accent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_medium_56"
        android:background="@color/color_primary_dark"
        android:orientation="vertical"
        android:paddingLeft="@dimen/spacing_small_8"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_vertical"
        >

        <TextView
            android:id="@+id/user_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Мерилин Монро"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_normal_14"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:id="@+id/user_email_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="example@mail.ru"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_normal_14"
            android:fontFamily="sans-serif"/>

    </LinearLayout>

</RelativeLayout>